@using ShoppingList_Team2_Master.Models
@model IEnumerable<ShoppingList_Team2_Master.Models.ShoppingListItemModel>

@{
    ViewBag.Title = "Items";
}

<h2>List Items</h2>
@if (ViewBag.ListId == 0)
{
    <p>No list is selected. Please select a list.</p>
    @Html.ActionLink("Lists", "Index", "ListModels")
}
else
{
    <p>
        @Html.ActionLink("Create New", "Create", "ShoppingListItemModels", new { ListId = ViewBag.ListId }, null)
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.ListId == ViewBag.ListId)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Purchased)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Edit", "Edit", new {id = item.ID}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.ID})
                    </td>
                </tr>
            }
        }
        </table>
}
<div>
    @Html.ActionLink("Back to Lists", "Index", "ListModels")
</div>